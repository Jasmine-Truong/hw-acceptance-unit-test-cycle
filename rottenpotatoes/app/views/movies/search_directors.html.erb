<h2>Similar Movies for <em><%= @movie.title %></em></h2>


<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>Movie Title</th>
      <th>Rating</th>
      <%# I added stuff here #%>
      <th>Director</th>
      <th>Release Date</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @same_director_movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <%# I added stuff here #%>
        <td>
          <%= movie.director %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= link_to 'Back to movie list', movies_path, :class => 'btn btn-primary col-2' %>
</div>
